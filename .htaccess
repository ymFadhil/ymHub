# Enable symlinks (needed for some servers / LiteSpeed)
Options +FollowSymLinks

# Enable rewrite engine
RewriteEngine On
RewriteBase /ymhub/

# Biarkan jika file/folder wujud
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Tambah .php automatik
RewriteCond %{DOCUMENT_ROOT}/ymhub/$1.php -f
RewriteRule ^(.*)/?$ $1.php [L,QSA,L]

# Redirect .php ke clean URL
RewriteCond %{THE_REQUEST} \s([^.]+)\.php[?\s] [NC]
RewriteRule ^ %1 [R=301,L]
