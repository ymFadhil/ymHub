RewriteEngine On

# 1️⃣ Redirect .php → clean URL (bm & en)
RewriteCond %{THE_REQUEST} \s/+((bm|en)/[^\s]+)\.php[\s?] [NC]
RewriteRule ^ /%1 [R=301,L]

# 2️⃣ Clean URL → php file
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^(.+)$ $1.php [L]
