RewriteEngine On
RewriteBase /ymhub/

# Jika file/folder wujud, biarkan
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Tambah .php untuk multi-level folder (termasuk bm/ atau en/)
RewriteCond %{DOCUMENT_ROOT}/ymhub/$1.php -f
RewriteRule ^(.*)/?$ $1.php [L]

# Optional: redirect dari .php ke tanpa extension
RewriteCond %{THE_REQUEST} \s([^.]+)\.php[?\s] [NC]
RewriteRule ^ %1 [R=301,L]
